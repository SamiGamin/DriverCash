<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Detalles.HistorialDiaFragment">

    <!-- TextView para mostrar la fecha o un título, opcional pero útil -->
    <TextView
        android:id="@+id/tv_historial_dia_titulo_fecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Detalles del 15 de Agosto de 2024" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_historial_dia_transacciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_historial_dia_titulo_fecha"
        tools:listitem="@layout/item_transaccion_dia" />

    <TextView
        android:id="@+id/tv_historial_dia_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay transacciones para este día."
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_historial_dia_titulo_fecha"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>